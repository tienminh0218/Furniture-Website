<div class="header-categories">
    <h3 class="title-table">Danh sách danh mục đã xóa</h3>
    <div class="button-function">
        <a href="#">
            <button class="btn-delete restoreCategory disabled">Khôi phục</button>
        </a>
        <a href="/admin/category">
            <button class="btn-update">
                <i class="bi bi-backspace"></i>
            </button>
        </a>
    </div>
    <table>
            <tr>  
            <th><input type="checkbox" name="checkAll" ></th>
            <th>STT</th>
            <th>Tên</th>
            <th>Mô tả</th>
            <th>Danh sách sản phẩm</th>
            <th></th>
            </tr>
                {{#each categoryDeleted}} 

                    <tr>
                        
                        <td> <input type="checkbox" name="itemCheck" idDatabase="{{this._id}}"> </td>
                        <td>{{sum @index 1}}</td>
                        <td>{{this.nameCategory}}</td>
                        <td>{{this.description}}</td>
                        <td>{{this.productChild}}</td>
                        <td>

                            <button class="btn-update">Sửa</button>
                        </td>
                    
                    </tr>
                    {{else}}
                    
                    <tr >
                        <td colspan="6">

                            chưa xóa cái nòn gì <a  href="/admin/category">Quay lại</a>
                        </td>


                    </tr>
                    
                
            {{/each}}

            
            
    </table>
</div>

