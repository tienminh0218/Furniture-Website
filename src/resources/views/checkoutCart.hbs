<div class="path">
        <a href="/">Trang chủ</a> 
        <span> / </span>
        <a href="/cart">Chi tiết giỏ hàng</a>
        <span> / </span>
        <a href="/cart/checkout">Xác nhận đơn hàng</a>
</div>

<div class="container-cartDetails">
    <div class="items-cartDetails">
        <h3 class="title-cartDetails">
            THÔNG TIN KHÁCH HÀNG
        </h3>

        <div class="container-inforCustomer">
            
            <div class="form-container">
                <div class="form-group">
                    <label >Họ và tên quý khách</label>
                    <input type="text"  name="fullname" value="{{user.fullname}}" class="form-control" autocomplete="on">
                    <div class="errorBox">
                        <span class="error-message"> </span>
                    </div>
                </div>

                <div class="form-group">
                    <label>Địa chỉ email</label>
                    <input type="text" name="emailaddress" value="{{user.emailaddress}}" class="form-control" autocomplete="on">
                    <div class="errorBox">
                        <span class="error-message"> </span>
                    </div>
                </div>

                <div class="form-group">
                    <label>Số điện thoại</label>
                    <input type="text" name="phonenumber" value="{{user.phonenumber}}" class="form-control" autocomplete="on">
                    <div class="errorBox">
                        <span class="error-message"> </span>
                    </div>
                </div>

                <div class="form-group">
                    <label>Địa chỉ thưởng trú</label>
                    <input type="text" name="address" value="{{user.address}}" class="form-control" autocomplete="on">
                    <div class="errorBox">
                        <span class="error-message"> </span>
                    </div>
                </div>

                <div class="form-group">
                    <label>Ghi chú</label>
                    <textarea type="text" name="descriptionOrder"  class="form-control" ></textarea>
                    <div class="errorBox">
                        <span class="error-message"> </span>
                    </div>
                </div>

                
            </div>
     
        </div>
  
     
   
    </div>
    <div class="information-cartDetails">
            <div class="payment-confirmation">
                <h3>THÔNG TIN ĐƠN HÀNG</h3>
                <div class="totalQuantity-cartDetails">
                    <p>Số lượng sản phẩm:</p>
                    <p> 
                        {{#if cart}}
                            {{cart.totalQuantity}} 
                            {{else}}
                            0
                        {{/if}}
                    </p>
                </div>
                <div class="totalPrice-cartDetails">
                    <p>Tổng chi phí:</p>
                    <p>{{number cart.totalPrice}} đ</p>
                </div>
                <p class="tax-cartDetails">
                    Đã bao gồm VAT (nếu có)
                </p>
                <button class="btn-confirmOrder confirm-checkoutCart">Xác nhận mua hàng</button>

            <div class="detailsCart-checkout">

                {{#each cart.products}}
                    <div class="item-checkout">
                        <h3>{{this.nameProduct}}</h3>
                        <p>SL: {{this.quantity}}</p>
                        <p>{{mutiply this.quantity this.priceProduct}}</p>
                    </div>
                
                {{/each}}
       
          
            </div>

            </div>
            <div class="policy-cartDetails">
                <svg width="18" height="18" viewBox="0 0 18 18" fill="none" xmlns="http://www.w3.org/2000/svg"><path fill-rule="evenodd" clip-rule="evenodd" d="M9 18C13.9706 18 18 13.9706 18 9C18 4.02944 13.9706 0 9 0C4.02944 0 0 4.02944 0 9C0 13.9706 4.02944 18 9 18Z" fill="#27AE60"></path> <path d="M7.74909 10.7374L6.01159 8.99993L5.41992 9.58743L7.74909 11.9166L12.7491 6.9166L12.1616 6.3291L7.74909 10.7374Z" fill="white" stroke="white"></path></svg>
                Hỗ trợ trả góp 0%, trả trước 0đ
            </div>
            <div class="policy-cartDetails">
                <svg width="18" height="18" viewBox="0 0 18 18" fill="none" xmlns="http://www.w3.org/2000/svg"><path fill-rule="evenodd" clip-rule="evenodd" d="M9 18C13.9706 18 18 13.9706 18 9C18 4.02944 13.9706 0 9 0C4.02944 0 0 4.02944 0 9C0 13.9706 4.02944 18 9 18Z" fill="#27AE60"></path> <path d="M7.74909 10.7374L6.01159 8.99993L5.41992 9.58743L7.74909 11.9166L12.7491 6.9166L12.1616 6.3291L7.74909 10.7374Z" fill="white" stroke="white"></path></svg>
                Hoàn tiền 200% khi phát hiện hàng giả
            </div>
            <div class="policy-cartDetails">
                <svg width="18" height="18" viewBox="0 0 18 18" fill="none" xmlns="http://www.w3.org/2000/svg"><path fill-rule="evenodd" clip-rule="evenodd" d="M9 18C13.9706 18 18 13.9706 18 9C18 4.02944 13.9706 0 9 0C4.02944 0 0 4.02944 0 9C0 13.9706 4.02944 18 9 18Z" fill="#27AE60"></path> <path d="M7.74909 10.7374L6.01159 8.99993L5.41992 9.58743L7.74909 11.9166L12.7491 6.9166L12.1616 6.3291L7.74909 10.7374Z" fill="white" stroke="white"></path></svg>
                Giao hàng nhanh 3H nội thành Hà Nội
            </div>
